<!DOCTYPE html>
html(lang="en")
  head
    include partials/header
    title= nombrePagina
    meta(http-equiv='Content-type' content='text/html; charset=utf-8')
    style(type='text/css').
      html, body{
      height:100%;
      padding:0px;
      margin:0px;
      overflow: hidden;
      }
  //- TODO: Revisar el listado por Role.
  body.body-pd
    header.barra
      //- h1 UpTask - Administrador de Proyectos - #{usuario.nombre}
      a.logo(href="/") UpTask - Administrador de Proyectos - #{usuarioDB.nombre}
      nav#navegador
        ul
          li
            a(href="/diagrama-gantt") Avance de Proyectos
          if(usuario.role === 3)
            li#listaTarea
              a(href='#') Tareas Asignadas
              #sublistaTarea.sublistaTarea
                #opcion
                  a(href="#") Tareas de Ing.
                #opcion
                  a(href="/lista-tareas") Lista Total
          else
            li
              a(href="/lista-tareas") Lista Total
          li
            a(href="/cerrar-sesion") Cerrar Sesión

    #gantt_here(style='width:100%; height:100%;')
    script(src='https://cdn.dhtmlx.com/gantt/edge/dhtmlxgantt.js')
    script(src="/dist/bundle.js")
    script(type='text/javascript').
      gantt.config.columns = [
              {name:"text",       label:"Tarea",  width:"200", tree:true },
              {name:"start_date", label:"Inicio", align:"center" },
              {name:"duration",   label:"Duración",   align:"center" },
              {name:"add",        label:"",           width:44 }
      ];

      var resourceConfig = {
          scale_height: 30
      };

      gantt.config.scale_unit = "day";
      gantt.config.step = 5;
      gantt.config.scale_height = 100;
      gantt.config.min_column_width = 40;
      gantt.config.scale_height = 50;
      gantt.init("gantt_here");
      gantt.load("/diagrama-gantt/data");